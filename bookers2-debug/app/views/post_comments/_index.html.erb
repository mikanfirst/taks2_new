<% book.post_comments.each do |post_comment| %>
  <tr>
    <td>
      <%= link_to user_path(post_comment.book.user) do %>
        <%= attachment_image_tag(post_comment.book.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
        <%= post_comment.book.user.name %>
      <% end %>
    </td>
    <td><%= post_comment.comment %></td>
    <td>
      <% if post_comment.user == current_user %>
        <%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), class: 'btn-sm btn-danger', method: :delete, remote: true %></td>
      <% end %>
  </tr>
<% end %>